<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CMS Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        .sidebar {
            height: 100vh;
            background-color: #f8f9fa;
            padding: 20px;
            position: fixed;
            top: 0;
            left: 0;
            width: 250px;
        }

        .sidebar h6 {
            margin-top: 20px;
            font-weight: bold;
        }

        .sidebar a {
            display: block;
            padding: 10px;
            margin-bottom: 10px;
            color: #343a40;
            text-decoration: none;
        }

        .sidebar a:hover {
            background-color: #e9ecef;
            border-radius: 5px;
        }

        .content {
            margin-left: 270px;
            padding: 20px;
        }

        .card-dashboard {
            background: #fff;
            border-radius: 8px;
            padding: 15px;
            text-align: center;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
            display: flex;
            flex-direction: column;
            align-items: flex-start;
        }

        .card-dashboard p {
            font-size: 16px;
            font-weight: 600;
            margin-bottom: 10px;
            align-self: flex-start;
        }

        .btn-add {
            background: none;
            border: 2px solid #000;
            color: #000;
            width: 30px;
            height: 30px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 16px;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .btn-add:hover {
            background-color: #000;
            color: #fff;
        }

        h2 {
            font-weight: 700;
            margin-bottom: 20px;
            font-size: 24px;
        }
    </style>
</head>
<body>

    <!-- Header -->
    <header>
        <h1>Demo Author</h1>  
    </header>

    <div class="sidebar" style="overflow-y: auto;">
        <h6 class="fw-bold" data-bs-toggle="collapse" href="#collections">Collections <i class="fas fa-chevron-down ms-2"></i></h6>
        <div id="collections" class="collapse">
            <a class="fw-light text-muted" href="#" style="font-size: 12px;"><i class="fas fa-file-alt me-2"></i>Pages</a>
            <a class="fw-light text-muted" href="#" style="font-size: 12px;"><i class="fas fa-blog me-2"></i>Posts</a>
            <a class="fw-light text-muted" href="#" style="font-size: 12px;"><i class="fas fa-project-diagram me-2"></i>Projects</a>
            <a class="fw-light text-muted" href="#" style="font-size: 12px;"><i class="fas fa-photo-video me-2"></i>Media</a>
            <a class="fw-light text-muted" href="#" style="font-size: 12px;"><i class="fas fa-tags me-2"></i>Categories</a>
            <a class="fw-light text-muted" href="#" style="font-size: 12px;"><i class="fas fa-users me-2"></i>Users</a>
            <a class="fw-light text-muted" href="#" style="font-size: 12px;"><i class="fas fa-comments me-2"></i>Comments</a>
            <a class="fw-light text-muted" href="#" style="font-size: 12px;"><i class="fas fa-exchange-alt me-2"></i>Redirects</a>
        </div>
        
        <h6 class="fw-bold" data-bs-toggle="collapse" href="#globals">Globals <i class="fas fa-chevron-down ms-2"></i></h6>
        <div id="globals" class="collapse">
            <a class="fw-light text-muted" href="#" style="font-size: 12px;"><i class="fas fa-cog me-2"></i>Settings</a>
            <a class="fw-light text-muted" href="#" style="font-size: 12px;"><i class="fas fa-heading me-2"></i>Header</a>
            <a class="fw-light text-muted" href="#" style="font-size: 12px;"><i class="fas fa-shoe-prints me-2"></i>Footer</a>
        </div>
    </div>

    <div class="content">
        <h2>Collections</h2>
        <div class="row g-3">
            <div class="col-md-3">
                <div class="card-dashboard">
                    <p class="fw-bold text-muted">Pages</p>
                    <button class="btn btn-add"><i class="fas fa-plus"></i></button>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card-dashboard">
                    <p class="fw-bold text-muted">Posts</p>
                    <button class="btn btn-add"><i class="fas fa-plus"></i></button>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card-dashboard">
                    <p class="fw-bold text-muted">Projects</p>
                    <button class="btn btn-add"><i class="fas fa-plus"></i></button>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card-dashboard">
                    <p class="fw-bold text-muted">Media</p>
                    <button class="btn btn-add"><i class="fas fa-plus"></i></button>
                </div>
            </div>
        </div>

        <h2 class="mt-4">Globals</h2>
        <div class="row g-3">
            <div class="col-md-4">
                <div class="card-dashboard">
                    <p class="fw-bold text-muted">Settings</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card-dashboard">
                    <p class="fw-bold text-muted">Header</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card-dashboard">
                    <p class="fw-bold text-muted">Footer</p>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            try {
                const jwt = localStorage.getItem('jwt');
                if (!jwt) {
                    window.location.href = '/api/admin/login';
                }
            } catch (error) {
                console.error('Error checking JWT:', error);
                window.location.href = '/api/admin/login';
            }
        });

        function logout() {
            localStorage.removeItem('jwt');
            window.location.href = '/api/admin/login';
        }
    </script>
</body>
</html>
